<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_5"
    android:background="@color/colorWhite"
    android:padding="@dimen/dp_16">

    <TextView
        android:id="@+id/tv_Coin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="签到积分10+29"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/sp_16"
        app:layout_constraintBottom_toTopOf="@id/tv_Date"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/tv_CoinCount"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_Date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5"
        android:text="2020-07-19 12:13:58"
        android:textColor="@color/color_gray800"
        android:textSize="@dimen/sp_14"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/tv_CoinCount"
        app:layout_constraintTop_toBottomOf="@id/tv_Coin" />

    <TextView
        android:id="@+id/tv_CoinCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+38"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/sp_16"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>